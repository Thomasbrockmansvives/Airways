@model Airways.ViewModels.FlightSearchVM

<div class="container-fluid">
    <div class="row g-3">
        <form id="flightSearchForm" asp-action="Search" method="post" class="col-10 row g-3">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-md-3">
                <label for="DepartureCityId" class="form-label">Departure City</label>
                <select asp-for="DepartureCityId" class="form-control" asp-items="@(new SelectList(Model.AvailableCities, "CityId", "Name"))">
                    <option value="">Select Departure City</option>
                </select>
                <span asp-validation-for="DepartureCityId" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label for="ArrivalCityId" class="form-label">Destination City</label>
                <select asp-for="ArrivalCityId" class="form-control" asp-items="@(new SelectList(Model.AvailableCities, "CityId", "Name"))">
                    <option value="">Select Destination City</option>
                </select>
                <span asp-validation-for="ArrivalCityId" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label for="TravelDate" class="form-label">Date</label>
                <input asp-for="TravelDate" type="date" class="form-control" />
                <span asp-validation-for="TravelDate" class="text-danger"></span>
            </div>
            
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-dark">Search</button>
            </div>
        </form>

        
        <form asp-action="Reset" method="get" class="col-2 d-flex align-items-end">
            <button type="submit" class="btn btn-secondary">Reset</button>
        </form>
    </div>
</div>
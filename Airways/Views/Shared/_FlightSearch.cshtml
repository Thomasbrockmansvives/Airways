@model Airways.ViewModels.FlightSearchVM

<div class="container-fluid">
    <form id="flightSearchForm" asp-action="Search" method="post">
        <div class="row g-3">
            <div class="col-md-3">
                <label for="DepartureCityId" class="form-label">Departure City</label>
                <select asp-for="DepartureCityId" id="departureCitySelect" class="form-control" asp-items="@(new SelectList(Model.AvailableCities, "CityId", "Name"))">
                    <option value="">Select Departure City</option>
                </select>
                <span asp-validation-for="DepartureCityId" class="text-danger" id="departureCitySelect-error"></span>
            </div>
            <div class="col-md-3">
                <label for="ArrivalCityId" class="form-label">Destination City</label>
                <select asp-for="ArrivalCityId" id="arrivalCitySelect" class="form-control" asp-items="@(new SelectList(Model.AvailableCities, "CityId", "Name"))">
                    <option value="">Select Destination City</option>
                </select>
                <span asp-validation-for="ArrivalCityId" class="text-danger" id="arrivalCitySelect-error"></span>
            </div>
            <div class="col-md-2">
                <label for="StartDate" class="form-label">Start</label>
                <input asp-for="StartDate" id="StartDate" type="date" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger" id="StartDate-error"></span>
            </div>
            <div class="col-md-2">
                <label for="EndDate" class="form-label">End</label>
                <input asp-for="EndDate" id="EndDate" type="date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger" id="EndDate-error"></span>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <div>
                    <button type="submit" class="btn btn-primary me-2">Search</button>
                    <button type="reset" class="btn btn-secondary">Reset</button>
                </div>
            </div>
        </div>
    </form>
</div>
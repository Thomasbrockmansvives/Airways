<div class="card shadow-sm mb-4">
    <div class="card-header bg-secondary text-white">
        <h3 class="card-title mb-0 small-title">Search</h3>
    </div>
    <div class="card-body">
        <p class="card-text mb-4 small-text">
            Select your departure, arrival , and the date range when you want to travel. 
        </p>

        <form id="flightSearchForm" method="post" asp-controller="Search" asp-action="SearchResults">
            <div class="row mb-3">
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="departureCity" class="form-label small-label">Departure City</label>
                        <select id="departureCity" name="DepartureCity" class="form-select small-select" required>
                            <option value="">-- Select Departure City --</option>
                            @foreach (var city in Model)
                            {
                                <option value="@city.CityId">@city.Name, @city.Country</option>
                            }
                        </select>
                        <div class="invalid-feedback">Please select a departure city.</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="arrivalCity" class="form-label small-label">Arrival City</label>
                        <select id="arrivalCity" name="ArrivalCity" class="form-select small-select" required>
                            <option value="">-- Select Arrival City --</option>
                            @foreach (var city in Model)
                            {
                                <option value="@city.CityId">@city.Name, @city.Country</option>
                            }
                        </select>
                        <div class="invalid-feedback">Please select an arrival city.</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="startDate" class="form-label small-label">Start Date</label>
                        <input type="date" id="startDate" name="StartDate" class="form-control small-input"
                               min="@DateTime.Now.AddDays(3).ToString("yyyy-MM-dd")"
                               max="@DateTime.Now.AddMonths(6).ToString("yyyy-MM-dd")"
                               required />
                        <div class="invalid-feedback">Please select a valid start date.</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="endDate" class="form-label small-label">End Date</label>
                        <input type="date" id="endDate" name="EndDate" class="form-control small-input"
                               min="@DateTime.Now.AddDays(3).ToString("yyyy-MM-dd")"
                               max="@DateTime.Now.AddMonths(6).ToString("yyyy-MM-dd")"
                               required />
                        <div class="invalid-feedback">Please select a valid end date.</div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12 d-flex justify-content-end">
                    <button type="reset" class="btn btn-secondary btn-sm me-2">Reset</button>
                    <button type="submit" class="btn btn-custom-dark-blue btn-sm">Search Flights</button>
                </div>
            </div>
        </form>
    </div>
</div>

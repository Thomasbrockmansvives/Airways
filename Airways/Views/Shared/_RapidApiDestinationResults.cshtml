@model Airways.ViewModels.RapidApiDestinationVM

<div class="card">
    <div class="card-header bg-dark text-white">
        <h5 class="mb-0">Destination for @Model.CityName</h5>
    </div>
    <div class="card-body">
        
            <div class="list-group-item">
                <div class="d-flex w-100 justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1">@Model.CityName</h5>
                        <p class="mb-0"><strong>Destination ID: @Model.DestId</strong></p>
                    </div>
                </div>
            </div>
            <div class="mt-3">
                <small class="text-muted">
                    This is the main destination match for "@Model.CityName".
                </small>
            </div>
        
    </div>
</div>
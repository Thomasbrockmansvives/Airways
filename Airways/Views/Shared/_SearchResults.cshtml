@model Airways.ViewModels.FlightSearchResultsVM

<div class="search-results" style="max-width: 80%;">
    <div class="alert alert-info">
        @if (Model.Lines == 1)
        {
            <p><strong>STEP 2: </strong>Select your preferred day for your flight.</p>
        }
        else if (Model.Lines == 2)
        {
            <p><strong>STEP 2: </strong>Select your preferred day for each of your <strong>2</strong> connecting flights.</p>
        }
        else if (Model.Lines == 3)
        {
            <p><strong>STEP 2: </strong>Select your preferred day for each of your <strong>3</strong> connecting flights.</p>
        }
    </div>

    @if (Model.Lines >= 1 && Model.FlightNumber1.HasValue)
    {
        <div class="card mb-4">
            <div class="card-header">
                <h5>Flight from @Model.Line1DepartureCity to @Model.Line1ArrivalCity</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Departure</th>
                                <th>Arrival</th>
                                <th>Economy</th>
                                <th>Business</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Line1Flights != null && Model.Line1Flights.Any())
                            {
                                @foreach (var flight in Model.Line1Flights)
                                {
                                    <tr>
                                        <td>@flight.Date.ToString("yyyy-MM-dd")</td>
                                        <td>@flight.FlightNumberNavigation.DepartureTime.ToString("HH:mm")</td>
                                        <td>@flight.FlightNumberNavigation.ArrivalTime.ToString("HH:mm")</td>
                                        <td>@flight.PriceEconomy.ToString("C")</td>
                                        <td>@flight.PriceBusiness.ToString("C")</td>
                                        <td>
                                            <a asp-controller="Booking" asp-action="SelectFlight"
                                               asp-route-flightId="@flight.FlightId"
                                               asp-route-line="1"
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-chevron-right"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center">No flights available for the selected dates.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }


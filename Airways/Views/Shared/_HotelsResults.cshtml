@model Airways.ViewModels.HotelsVM

<div class="card">
    <div class="card-header bg-info text-white">
        <h5 class="mb-0">Hotels in @Model.City</h5>
        <small>For @Model.Date.ToString("yyyy-MM-dd")</small>
    </div>
    <div class="card-body">
        @if (Model.Hotels == null || !Model.Hotels.Any())
        {
            <p class="alert alert-info">No hotels found for this location and date.</p>
        }
        else
        {
            <div class="list-group">
                @foreach (var hotel in Model.Hotels)
                {
                    <div class="list-group-item">
                        <div class="d-flex w-100 justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-1">@hotel.Name</h5>
                                <p class="mb-1">Rating: @hotel.Rating/10</p>
                                <p class="mb-0">€@hotel.Price.ToString("0.00") per night</p>
                            </div>
                            <img src="@hotel.ImageUrl" alt="@hotel.Name" class="img-thumbnail" style="width: 80px; height: 80px; object-fit: cover;" />
                        </div>
                        <a href="#" class="btn btn-sm btn-outline-primary mt-2">View Details</a>
                    </div>
                }
            </div>
            <div class="mt-3">
                <small class="text-muted">
                    Note: These are the 3 best-rated hotels in @Model.City for your travel date.
                </small>
            </div>
        }
    </div>
</div>